<h1 class="title">Профиль пользователя <%= @user.name %></h1>

<div class="profile">
  <h2 class="profile-username">Ник: <%= @user.username %></h2>
  <div class="profile-avatar">
    <%= image_tag user_avatar(@user), alt: 'аватар пользователя #{@user.name}' %>
  </div>
  <%= link_to 'Редактировать профиль', edit_user_path(@user), class: 'block max-w-xs text-center bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded' %>
</div>

<div class="questions">
  <div class="form question-form">
    <%= form_for @new_question do |f| %>
      <%= f.hidden_field :user_id %>

      <div class="form-field">
        <%= f.label "Текст вопроса", class: 'form-label' %>
        <%= f.text_area :text, class: 'form-textarea' %>
      </div>

      <%= submit_tag 'Задать вопрос', class: 'btn' %>

    <% end %>
  </div>
  <div class="questions-wrap">
    <h2> Количество: <%= @user.questions.size %> <%= declination_by_numbers(@user.questions.size, "Вопрос", "Вопроса", "Вопросов") %> </h2>

    
    <% @user.questions.each do |question| %>
      <%= render partial: 'questions/question', object: question %>
    <% end %>
  </div>
</div>